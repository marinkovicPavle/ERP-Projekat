{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext"
    },
    "meta_description": {
      "type": "text"
    },
    "meta_title": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "category": {
      "via": "products",
      "model": "category"
    },
    "reviews": {
      "via": "product",
      "collection": "reviews"
    },
    "comments": {
      "via": "product",
      "collection": "comments"
    },
    "wishlists": {
      "via": "products",
      "collection": "wishlist"
    }
  }
}
